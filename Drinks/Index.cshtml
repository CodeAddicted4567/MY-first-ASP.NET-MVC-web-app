@model DrinksStoreManage.Models.DrinksViewModel
@{
    ViewData["Title"] = "Index";
}
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $('h5 b').fadeOut('very slow');
        }, 1000);// 3 seconds
    });
</script>
<h1>Index</h1>
<form asp-action="Index" method="get">
    <select asp-for="FIndType" asp-items="Model.TypeList">
        <option value="">All</option>
    </select>
    Find items: <input type="text" asp-for="SearchStr" />
    <input type="submit"/>
    <!--Sort data⬆⬇-->
    <p>
        <span style ="color:green;text-decoration:none;">
            <a asp-action="Index" asp-route-sorts="sorts">Name--⬆</a>@*@the value of sorts parameter is name*@
        </span>
@*         <span>
            <a asp-action="Index" asp-route-sorts="qty">Quantity⬇</a>the value of sorts parameter is Quality
        </span> *@

    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Drinks![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drinks![0].Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drinks![0].Type)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drinks!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<h5><b style="text-align:center; color:green;">@TempData["Created"]</b></h5>
<h5><b style="text-align:center; color:red;">@TempData["Deleted"]</b></h5>